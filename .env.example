############################################################
# Bluesky Affirmative Bot – Environment Configuration       #
# Keep this file private. Copy to .env and fill values.     #
# Ref: docs/ADVANCED_CONFIG.md for full explanations.       #
############################################################

########################
# Core (Required)
########################
BSKY_IDENTIFIER=your-handle.bsky.social    # Your Bluesky handle
BSKY_APP_PASSWORD=xxxx-xxxx-xxxx           # Bluesky App Password (NOT main password)
# BSKY_PASSWORD=                           # (Legacy alias – still supported)
GEMINI_API_KEY=your-gemini-key             # Gemini (free tier OK) or supply OpenRouter below

########################
# Optional Bluesky / AT Protocol
########################
BSKY_DID=                                  # DID (auto-resolved if empty)
CUSTOM_PDS_URL=                            # Custom PDS (https://your-pds.example.com)
DEFAULT_PDS_URL=https://bsky.social        # Fallback PDS

########################
# AI Service Selection
########################
AI_SERVICE_PREFERENCE=openrouter           # openrouter | gemini | mixed
OPENROUTER_API_KEY=                        # Claude / GPT‑4 etc. (leave blank to skip)
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
OPENROUTER_FAST_MODEL=anthropic/claude-3-haiku
OPENROUTER_CREATIVE_MODEL=openai/gpt-4o
OPENROUTER_FALLBACK_TO_GEMINI=true         # true = fallback to Gemini on error
USE_OPENROUTER_FOR_CONVERSATION=true       # Fine-grained override
USE_OPENROUTER_FOR_GENERATION=true         # Fine-grained override
OPENROUTER_REFERER=https://github.com/j4ckxyz/frost-bot
OPENROUTER_TITLE=Bluesky Affirmative Bot

########################
# Runtime / Logging
########################
NODE_ENV=production                        # production | development
LOG_LEVEL=info                             # error | warn | info | debug
NODE_PORT=                                 # If internal server is enabled
JETSTREAM_ENDPOINT=wss://jetstream2.us-east.bsky.network/subscribe

########################
# Behavior / Limits
########################
MAX_RESPONSE_LENGTH=280
CACHE_TTL=3600                              # Seconds cache lives
DEFAULT_REPLY_FREQUENCY=30                 # % replies for new users (0-100)
MAX_POSTS_PER_MINUTE=60
MAX_REPLIES_PER_USER_HOUR=10
USER_REPLY_COOLDOWN=300                    # Seconds

########################
# Feature Flags (true/false)
########################
ENABLE_FORTUNE=true
ENABLE_CONVERSATION=true
ENABLE_ANALYSIS=true
ENABLE_DJ_MODE=true
ENABLE_DIARY=true
ENABLE_CHEER=true

########################
# Personality / Localization
########################
BOT_NAME=Affirmative Bot
BOT_PERSONALITY=friendly, encouraging, supportive
DEFAULT_LANGUAGE=en                        # en | ja
ENABLE_MULTILANG=true

########################
# Database
########################
DB_PATH=./data/bot.db                      # SQLite file path
ENABLE_DB_BACKUP=true
DB_BACKUP_INTERVAL=24                      # Hours

########################
# External Integrations (Optional)
########################
YOUTUBE_API_KEY=
SPREADSHEET_ID=                            # or GSHEET_ID legacy
GSHEET_ID=
GOOGLE_CLIENT_EMAIL=
GOOGLE_PRIVATE_KEY=
NEGAPOSI_URL=                              # External sentiment service (override)
NGROK_FOWARDING_URL=                       # Voice/speech forwarding

########################
# Notes
########################
# - Only one AI key needed to start (Gemini OR OpenRouter)
# - Leave unused flags empty
# - Booleans: true/false (no quotes)
# - Remove this header if deploying to production infra
