# ============================================
# BLUESKY ACCOUNT CREDENTIALS (Required)
# ============================================

# Your Bluesky handle (username)
# Example: mybot.bsky.social
BSKY_IDENTIFIER="your-handle.bsky.social"

# Bluesky App Password (NOT your main password!)
# Generate at: https://bsky.app/settings/app-passwords
BSKY_PASSWORD="your-app-password-here"

# Your bot's DID (Decentralized Identifier)
# Find at: https://bsky.app/profile/your-handle.bsky.social
# Look in the URL or use: https://plc.directory/your-handle.bsky.social
BOT_DID="did:plc:your-did-here"


# ============================================
# GOOGLE GEMINI API (Required)
# ============================================

# Get free API key at: https://makersuite.google.com/app/apikey
# Free tier: 60 requests/minute
GEMINI_API_KEY="your-gemini-api-key"

# Default model for Gemini
MODEL_GEMINI_DEFAULT="gemini-1.5-flash-latest"


# ============================================
# OPENROUTER API (Optional but Recommended)
# ============================================

# OpenRouter provides access to Claude, GPT-4, and 200+ models
# Sign up at: https://openrouter.ai/
# Get API key at: https://openrouter.ai/keys

# Your OpenRouter API key
OPENROUTER_API_KEY="your-openrouter-api-key"

# Default model for general responses
# Options: anthropic/claude-3.5-sonnet, openai/gpt-4-turbo, etc.
MODEL_OPENROUTER_DEFAULT="anthropic/claude-3.5-sonnet"

# Fast model for quick responses (< 50ms target)
MODEL_OPENROUTER_FAST="anthropic/claude-3-haiku"

# Creative model for complex tasks
MODEL_OPENROUTER_CREATIVE="anthropic/claude-3.5-sonnet"

# AI service preference: "openrouter" or "gemini"
# Determines which service is tried first
AI_SERVICE_PREFERENCE="openrouter"

# Enable fallback to Gemini if OpenRouter fails
OPENROUTER_FALLBACK_TO_GEMINI="true"


# ============================================
# CUSTOM AT PROTOCOL PDS (Optional)
# ============================================

# Use a custom Personal Data Server instead of Bluesky's default
# Leave empty to use default PDS (bsky.social)
# Example: https://pds.example.com
CUSTOM_PDS_URL=""

# Default PDS URL (fallback if custom PDS fails)
DEFAULT_PDS_URL="https://bsky.social"


# ============================================
# BOT BEHAVIOR SETTINGS
# ============================================

# Development mode: enables verbose logging and test features
# Set to "true" for testing, "false" for production
DEVELOPMENT_MODE="false"

# Maximum length for bot replies (characters)
MAX_RESPONSE_LENGTH="280"

# Cache TTL (Time To Live) in seconds
# How long to cache responses before regenerating
CACHE_TTL="3600"

# Default reply frequency for new followers (0-100)
# 100 = reply to every post, 0 = never reply
DEFAULT_REPLY_FREQUENCY="30"


# ============================================
# GOOGLE SHEETS INTEGRATION (Optional)
# ============================================

# For tracking subscribers and analytics
# Create a Google Cloud project and enable Sheets API
# Get credentials at: https://console.cloud.google.com/

GSHEET_ID=""
GSHEET_RANGE=""
GOOGLE_CLIENT_EMAIL=""
GOOGLE_PRIVATE_KEY=""


# ============================================
# GOOGLE NEWS API (Optional)
# ============================================

# For news-based responses and current events
# Get API key at: https://newsapi.org/

GNEWS_API_KEY=""


# ============================================
# YOUTUBE API (Optional)
# ============================================

# For music recommendations in DJ mode
# Get API key at: https://console.cloud.google.com/

YOUTUBE_API_KEY=""


# ============================================
# SERVER SETTINGS (Optional)
# ============================================

# Port for health check server
# Used for monitoring and service validation
SERVER_PORT="3000"


# ============================================
# ADVANCED SETTINGS
# ============================================

# Jetstream endpoint for real-time events
# Default: wss://jetstream2.us-east.bsky.network/subscribe
JETSTREAM_ENDPOINT="wss://jetstream2.us-east.bsky.network/subscribe"

# Log level: "error", "warn", "info", "debug"
LOG_LEVEL="info"

# Maximum retries for failed API calls
MAX_RETRIES="3"

# Retry delay in milliseconds
RETRY_DELAY="1000"


# ============================================
# PERSONALITY SETTINGS
# ============================================

# These settings control how your bot behaves
# Adjust to match your desired personality

# Bot name (used in system prompts)
BOT_NAME="Affirmative Bot"

# Bot personality description
BOT_PERSONALITY="friendly, encouraging, and supportive"

# Default language: "en" or "ja"
DEFAULT_LANGUAGE="en"

# Enable multi-language support
ENABLE_MULTILANG="true"


# ============================================
# FEATURE FLAGS
# ============================================

# Enable/disable specific bot features
# Set to "true" to enable, "false" to disable

ENABLE_FORTUNE="true"
ENABLE_CONVERSATION="true"
ENABLE_ANALYSIS="true"
ENABLE_DJ_MODE="true"
ENABLE_DIARY="true"
ENABLE_CHEER="true"


# ============================================
# RATE LIMITING
# ============================================

# Maximum posts to process per minute
MAX_POSTS_PER_MINUTE="60"

# Maximum replies per user per hour
MAX_REPLIES_PER_USER_HOUR="10"

# Cooldown between replies to same user (seconds)
USER_REPLY_COOLDOWN="300"


# ============================================
# DATABASE SETTINGS
# ============================================

# SQLite database file location
DB_PATH="./data/bot.db"

# Enable database backups
ENABLE_DB_BACKUP="true"

# Backup interval (hours)
DB_BACKUP_INTERVAL="24"


# ============================================
# NOTES
# ============================================

